<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--InitActivity-->
    <!-- 初始化登录按钮-->
    <style name="style_init_btn">
        <item name="android:layout_width">@dimen/init_btn_width</item>
        <item name="android:layout_height">@dimen/init_btn_height</item>
    </style>
    <!-- 初始化 游客登录字体-->
    <style name="style_init_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/init_text_visitor_size</item>
    </style>

    <!-- 登录界面 用户名,密码,忘记密码TextView 字体-->
    <style name="style_login_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_login_text</item>
        <item name="android:textSize">@dimen/login_text_size</item>
    </style>

    <!-- 登录界面 用户名 密码 输入框-->
    <style name="style_login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edittext_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/color_login_edit_hint</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
        <item name="android:textSize">@dimen/login_edit_text_size</item>
    </style>



</resources>
