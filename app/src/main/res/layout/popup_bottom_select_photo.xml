<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_bg"
        >

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="拍照"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle_head_round_bottom_line_blue"
                android:textColor="#0379fd"
                android:textSize="@dimen/dimen_text_size_18"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="我的相册"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle_bottom_round"
                android:textColor="#0379fd"
                android:textSize="@dimen/dimen_text_size_18"
                android:gravity="center"
                />








           <TextView
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:text="取消"
               android:layout_margin="10dp"
               android:background="@drawable/shape_white_rectangle"
               android:textColor="#0379fd"
               android:textSize="@dimen/dimen_text_size_18"
               android:gravity="center"

               />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>