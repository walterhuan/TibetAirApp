<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/color_bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/common_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bg_listview"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_bottom_line_blue"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="姓        名"
                android:textSize="@dimen/dimen_text_size_18"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

            <EditText
                android:gravity="end|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:hint="中文或英文"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_bottom_line_blue"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="联系电话"
                android:textSize="@dimen/dimen_text_size_18"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

            <EditText
                android:gravity="end|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:hint="联系人电话号码"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="邮        箱"
                android:textSize="@dimen/dimen_text_size_18"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

            <EditText
                android:gravity="end|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:hint="联系人邮箱(选填)"
                android:layout_height="match_parent"/>
        </LinearLayout>




    </LinearLayout>


    <Button
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_confirm_add_commom_contact"
        style="@style/style_button_fill_yellow"
        android:text="确认"
        />



</LinearLayout>