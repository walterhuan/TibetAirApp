<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_bg_gray"
                android:orientation="vertical">

    <include layout="@layout/common_top"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/xizanghangkong"
        />

    <ImageView
        android:id="@+id/img_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/qr_code"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/ll_scan_share"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@id/img_qr_code"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描二维码,向您的好友"
            android:textSize="@dimen/dimen_text_size_16"
            android:textColor="@color/text_color_light"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享西藏航空吧"
            android:textSize="@dimen/dimen_text_size_16"
            android:textColor="@color/text_color_light"
            />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn_share"
        android:textColor="@color/color_white"
        android:background="@drawable/fenxiang"
        android:layout_below="@id/ll_scan_share"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/dimen_text_size_20"
        android:text="点击分享"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西藏航空 V 1.1.1"
            android:textSize="@dimen/dimen_text_size_14"
            android:textColor="@color/text_color_normal"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旅客朋友, 感谢您对西藏航空APP的关注!"
            android:textSize="@dimen/dimen_text_size_14"
            android:textColor="@color/text_color_normal"
            />
    </LinearLayout>

</RelativeLayout>